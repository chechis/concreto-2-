<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="12dp"
    android:backgroundTint="@color/cardview_shadow_end_color"
    android:elevation="15dp"
    app:cardCornerRadius="10dp">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/txt_nombre_proyecto"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Nombre del proyecto"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="6"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/txt_resistencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resistencia"
                android:padding="5dp"
                android:textStyle="bold|italic"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_proporcion_asentamiento"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Asentamiento"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"
                    />
                <TextView
                    android:id="@+id/txt_proporcion_relAC"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="rel AC"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_proporcion_volumetrica"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="Proporcion volumetrica"
                android:layout_marginBottom="5dp"
                android:textStyle="bold|italic"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_prop_vol_cemento"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="1"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"
                    />
                <TextView
                    android:id="@+id/txt_prop_vol_arena"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="arena"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"
                    />
                <TextView
                    android:id="@+id/txt_prop_vol_piedrin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="piedrin"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"
                    />
                <TextView
                    android:id="@+id/txt_prop_vol_agua"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="agua"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_proporcion_unitaria"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:text="Proporcion Unitaria (kg/m^3)"
                android:padding="5dp"
                android:textStyle="bold|italic"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_prop_uni_cemento"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="cemento"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"
                    />
                <TextView
                    android:id="@+id/txt_prop_uni_arena"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="arena"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"
                    />
                <TextView
                    android:id="@+id/txt_prop_uni_piedrin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="piedrin"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"
                    />
                <TextView
                    android:id="@+id/txt_prop_uni_agua"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="agua"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_proporcion_saco"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:text="Proporcion para un saco de cemento (kg)"
                android:padding="5dp"
                android:textStyle="bold|italic"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_saco_arena"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="arena"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"
                    />
                <TextView
                    android:id="@+id/txt_saco_piedrin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="piedrin"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"
                    />
                <TextView
                    android:id="@+id/txt_saco_agua"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="agua"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"
                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginRight="6dp">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete_black_24dp"
                android:id="@+id/btn_proporcion_delete"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_black_24dp"
                android:id="@+id/btn_proporcion_edit"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_eye_black_24dp"
                android:id="@+id/btn_ver_informacion"/>


        </LinearLayout>



    </LinearLayout>


</android.support.v7.widget.CardView>